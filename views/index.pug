        //p #{a}
        div(class='container-fluid mt-4')
            div(class='row')
                div(class="col")
                div(class='col-10')
                    div(class='card')
                        div(class='card-header') EXPERIMENTAL WEBSOCKET CHATAPP
                        div(class='card-body')
                            div(id='chat-box')
                                div(class='row')
                                    div(class='col-12 overflow-auto' id="msg_box")
                                        p(class='text-muted p-1' id="placeholder_no_msg") No messages yet...
                        div(class='row mt-3 p-2')
                            div(class='col')
                                input(type='text', id='username_input', class='form-control', placeholder='type your username...')
                                input(type='text', id='message_input', class='form-control mt-2', placeholder='Type a message...')
                                button(id='send_msg', class='btn btn-primary mt-2 float-right') Send message
                                input(type='text', id='canal_input', class='form-control mt-2', placeholder='canal // if unset it uses public channel')

                div(class="col")
        script(src="client.js")  